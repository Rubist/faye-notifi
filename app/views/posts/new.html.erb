<h1>New post</h1>

<%= render 'form' %>

<h5>Totel post <span class="count"><%=@posts_count %></span></h5>


<table>
  <thead>
    <tr>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="posts">
    <% @posts.each do |post| %>
      <tr >
        <td><%= post.message %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Back', posts_path %>
